    android:id="@+id/nav_graph"
    app:startDestination="@id/rootFragment">

    <fragment
        android:id="@+id/rootFragment"
        android:name="dev.appyxnavcomp.RootFragment"
        android:label="RootFragment">
        <action
            android:id="@+id/action_rootFragment_to_nextFragment"
            app:destination="@id/nextFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/nextFragment"
        android:name="dev.appyxnavcomp.NextFragment"
        android:label="NextFragment" />
</navigation>